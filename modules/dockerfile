FROM python:3.11-slim

# System deps (small but enough for lxml, pptx, etc.)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential libxml2 libxslt1.1 libglib2.0-0 libgl1 \
 && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Requirements first (better cache)
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# App code
COPY . .

# Defaults for durable paths (override in App Settings if you want)
ENV WORK_DIR=/home/site/data/work \
    PERSIST_DIR=/home/site/data/chroma \
    VECTORSTORE_DIR=/home/site/data/vectorstore \
    PYTHONUNBUFFERED=1

# Streamlit on 8501 (Azure will map)
EXPOSE 8501
CMD ["streamlit", "run", "main.py", "--server.port=8501", "--server.address=0.0.0.0"]
